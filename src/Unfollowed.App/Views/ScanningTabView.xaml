<UserControl x:Class="Unfollowed.App.Views.ScanningTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="24">
        <Border Style="{StaticResource SurfaceCard}" Padding="20">
            <StackPanel>
                <TextBlock Text="Scan configuration" FontSize="18" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" Margin="0,16,0,0" VerticalAlignment="Center">
                    <Button Content="Select ROI"
                            Command="{Binding SelectRoiCommand}"
                            Width="140"
                            Margin="0,0,12,0" />
                    <TextBlock Text="{Binding RoiStatus}" VerticalAlignment="Center" Style="{StaticResource SecondaryText}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,16,0,0" VerticalAlignment="Center">
                    <Button Content="Start"
                            Command="{Binding StartCommand}"
                            IsEnabled="{Binding CanStart}"
                            Width="120"
                            Margin="0,0,12,0" />
                    <Button Content="Stop"
                            Command="{Binding StopCommand}"
                            IsEnabled="{Binding IsRunning}"
                            Width="120" />
                    <TextBlock Text="{Binding IsRunning, StringFormat=Running: {0}}"
                               Margin="16,0,0,0"
                               VerticalAlignment="Center"
                               Style="{StaticResource SecondaryText}" />
                </StackPanel>
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Capture FPS" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Slider Minimum="1"
                                Maximum="60"
                                Value="{Binding Fps}"
                                Width="240" />
                        <TextBlock Text="{Binding Fps}"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource SecondaryText}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Confidence threshold" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Slider Minimum="0"
                                Maximum="1"
                                SmallChange="0.01"
                                LargeChange="0.05"
                                Value="{Binding ConfidenceThreshold}"
                                Width="240" />
                        <TextBlock Text="{Binding ConfidenceThreshold}"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource SecondaryText}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="0,20,0,0" HorizontalAlignment="Left" Orientation="Horizontal" Height="37" Width="189">
                    <TextBlock Text="OCR profile" FontWeight="SemiBold" Width="70" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <ComboBox ItemsSource="{Binding Profiles}"
                              SelectedItem="{Binding SelectedProfile}"
                              Width="112" RenderTransformOrigin="1.571,-0.215" Height="28"
                              />
                </StackPanel>
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="Overlay options" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <CheckBox Content="Show badge text"
                                  IsChecked="{Binding ShowBadgeText}"
                                  Margin="0,0,16,0" />
                        <CheckBox Content="Show OCR text"
                                  IsChecked="{Binding ShowOcrText}"
                                  Margin="0,0,16,0" />
                        <CheckBox Content="Show ROI outline"
                                  IsChecked="{Binding ShowRoiOutline}" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="0,24,0,0">
                    <TextBlock Text="Advanced / Testing" FontWeight="SemiBold" />
                    <StackPanel Margin="0,12,0,0">
                        <TextBlock Text="OCR frame diff threshold" FontWeight="SemiBold" />
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Slider Minimum="0"
                                    Maximum="1"
                                    SmallChange="0.01"
                                    LargeChange="0.05"
                                    Value="{Binding OcrFrameDiffThreshold}"
                                    Width="240" />
                            <TextBlock Text="{Binding OcrFrameDiffThreshold}"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource SecondaryText}" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="Overlay behavior" FontWeight="SemiBold" />
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <CheckBox Content="Always on top"
                                      IsChecked="{Binding AlwaysOnTop}"
                                      Margin="0,0,16,0" />
                            <CheckBox Content="Click through"
                                      IsChecked="{Binding ClickThrough}"
                                      Margin="0,0,16,0" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Theme"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />
                                <ComboBox ItemsSource="{Binding OverlayThemes}"
                                          SelectedItem="{Binding Theme}"
                                          Width="120" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="Capture frame dumps" FontWeight="SemiBold" />
                        <CheckBox Content="Enable frame dumps"
                                  IsChecked="{Binding CaptureDumpEnabled}"
                                  Margin="0,8,0,0" />
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Dump every N frames"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBox Text="{Binding CaptureDumpEveryNFrames, UpdateSourceTrigger=PropertyChanged}"
                                     Width="80"
                                     IsEnabled="{Binding CaptureDumpEnabled}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Output directory"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBox Text="{Binding CaptureDumpOutputDirectory, UpdateSourceTrigger=PropertyChanged}"
                                     Width="240"
                                     IsEnabled="{Binding CaptureDumpEnabled}" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="Test tools" FontWeight="SemiBold" />
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Test capture"
                                    Command="{Binding TestCaptureCommand}"
                                    Width="120"
                                    Margin="0,0,12,0" />
                            <Button Content="Test OCR"
                                    Command="{Binding TestOcrCommand}"
                                    Width="120"
                                    Margin="0,0,12,0" />
                            <Button Content="Test overlay"
                                    Command="{Binding TestOverlayCommand}"
                                    Width="120" />
                        </StackPanel>
                        <TextBox Text="{Binding TestToolsStatus}"
                                 Margin="0,12,0,0"
                                 Height="120"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
