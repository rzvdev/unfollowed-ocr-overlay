<UserControl x:Class="Unfollowed.App.Views.DiagnosticsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="24">
        <Grid RowDefinitions="Auto,Auto,*">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="Diagnostics" FontSize="18" FontWeight="SemiBold" />
                <Button Grid.Column="1"
                        Content="Clear logs"
                        Command="{Binding ClearLogsCommand}"
                        Padding="12,6"
                        Margin="12,0,0,0" />
            </Grid>
            <UniformGrid Grid.Row="1" Columns="2" Margin="0,16,0,16">
                <Border Background="#1F1F1F" CornerRadius="8" Padding="12" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Average frame time" Foreground="#B5B5B5" />
                        <TextBlock Text="{Binding FrameTimeAverage, StringFormat={}{0:0.0} ms}"
                                   FontSize="16"
                                   FontWeight="SemiBold" />
                    </StackPanel>
                </Border>
                <Border Background="#1F1F1F" CornerRadius="8" Padding="12">
                    <StackPanel>
                        <TextBlock Text="Average OCR latency" Foreground="#B5B5B5" />
                        <TextBlock Text="{Binding OcrLatencyAverage, StringFormat={}{0:0.0} ms}"
                                   FontSize="16"
                                   FontWeight="SemiBold" />
                    </StackPanel>
                </Border>
            </UniformGrid>
            <ListBox Grid.Row="2"
                     ItemsSource="{Binding LogEntries}"
                     BorderThickness="1"
                     BorderBrush="#2B2B2B"
                     Background="#121212"
                     Padding="8">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,Auto,Auto,*" Margin="0,4">
                            <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}"
                                       Foreground="#B5B5B5" />
                            <TextBlock Text="{Binding Level}"
                                       Margin="8,0,0,0"
                                       Foreground="#B5B5B5" />
                            <TextBlock Text="{Binding Category}"
                                       Margin="8,0,0,0"
                                       Foreground="#B5B5B5" />
                            <TextBlock Grid.Column="3"
                                       Text="{Binding Message}"
                                       Margin="8,0,0,0"
                                       TextWrapping="Wrap"
                                       Foreground="White" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
