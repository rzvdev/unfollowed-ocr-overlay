<UserControl x:Class="Unfollowed.App.Views.DataTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="24">
        <Border Style="{StaticResource SurfaceCard}" Padding="20">
            <StackPanel>
                <TextBlock Text="Convert JSON to CSV" FontSize="18" FontWeight="SemiBold" />
                <StackPanel Margin="0,12,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <Button Content="Select following.json"
                                Command="{Binding SelectFollowingJsonCommand}"
                                Width="170"
                                Margin="0,0,12,0" />
                        <TextBlock Text="{Binding FollowingJsonLabel}"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap"
                                   Width="320" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="Select followers.json"
                                Command="{Binding SelectFollowersJsonCommand}"
                                Width="170"
                                Margin="0,0,12,0" />
                        <TextBlock Text="{Binding FollowersJsonLabel}"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap"
                                   Width="320" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Button Content="Select output folder"
                                Command="{Binding SelectOutputDirectoryCommand}"
                                Width="170"
                                Margin="0,0,12,0" />
                        <TextBlock Text="{Binding OutputDirectoryLabel}"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap"
                                   Width="320" />
                    </StackPanel>
                    <Button Content="Convert JSON to CSV"
                            Command="{Binding ConvertJsonToCsvCommand}"
                            Width="170"
                            Margin="0,12,0,0" />
                </StackPanel>

                <TextBlock Text="Import CSV data" FontSize="18" FontWeight="SemiBold" Margin="0,24,0,0" />
                <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                    <Button Content="Load following CSV"
                            Command="{Binding LoadFollowingCsvCommand}"
                            Width="170"
                            Margin="0,0,12,0" />
                    <Button Content="Load followers CSV"
                            Command="{Binding LoadFollowersCsvCommand}"
                            Width="170" />
                </StackPanel>
                <TextBlock Text="{Binding StatusMessage}" Margin="0,16,0,0" />
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="{DynamicResource ErrorBrush}"
                           TextWrapping="Wrap" />
                <StackPanel Margin="0,16,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Following" Width="160" Style="{StaticResource SecondaryText}" />
                        <TextBlock Text="{Binding FollowingCount}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Followers" Width="160" Style="{StaticResource SecondaryText}" />
                        <TextBlock Text="{Binding FollowersCount}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="Not following back" Width="160" Style="{StaticResource SecondaryText}" />
                        <TextBlock Text="{Binding NonFollowBackCount}" />
                    </StackPanel>
                </StackPanel>

                <TabControl Margin="0,20,0,0">
                    <TabItem Header="Following">
                        <Grid>
                            <ListView ItemsSource="{Binding Following}" />
                            <TextBlock Text="No following usernames loaded."
                                       Style="{StaticResource SecondaryText}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Following.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Followers">
                        <Grid>
                            <ListView ItemsSource="{Binding Followers}" />
                            <TextBlock Text="No follower usernames loaded."
                                       Style="{StaticResource SecondaryText}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Followers.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Not following back">
                        <Grid>
                            <ListView ItemsSource="{Binding NonFollowBack}" />
                            <TextBlock Text="No non-follow-back usernames loaded."
                                       Style="{StaticResource SecondaryText}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding NonFollowBack.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
