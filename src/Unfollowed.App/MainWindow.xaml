<Window x:Class="Unfollowed.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Unfollowed.App.Views"
        Title="Unfollowed" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="841*"/>
        </Grid.ColumnDefinitions>
        <TabControl SelectedIndex="{Binding SelectedTabIndex}" Grid.ColumnSpan="2">
            <TabItem Header="Data">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <views:DataTabView DataContext="{Binding Data}" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Scanning">
                <views:ScanningTabView DataContext="{Binding Scanning}" />
            </TabItem>
            <TabItem Header="Diagnostics">
                <views:DiagnosticsTabView DataContext="{Binding Diagnostics}" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
